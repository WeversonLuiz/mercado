<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
    version="1.2">
    
    <managed-bean>
        <managed-bean-name>PedidoControl</managed-bean-name>
        <managed-bean-class>br.com.mercado.controle.PedidoControl</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>ClienteControl</managed-bean-name>
        <managed-bean-class>br.com.mercado.controle.ClienteControl</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    
    <navigation-rule>
        <display-name>pesquisa</display-name>
        <from-view-id>/pesquisa.jsp</from-view-id>
        <navigation-case>
            <from-outcome>detalhes</from-outcome>
            <to-view-id>/detalhes.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <display-name>detalhes</display-name>
        <from-view-id>/detalhes.jsp</from-view-id>
        <navigation-case>
            <from-outcome>carrinho</from-outcome>
            <to-view-id>/carrinho.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <display-name>login</display-name>
        <from-view-id>/login.jsp</from-view-id>
        <navigation-case>
            <from-outcome>formularioCliente</from-outcome>
            <to-view-id>/cadastroCliente.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <display-name>cliente</display-name>
        <from-view-id>/cadastroCliente.jsp</from-view-id>
        <navigation-case>
            <from-outcome>confirmado</from-outcome>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <display-name>carrinho</display-name>
        <from-view-id>/carrinho.jsp</from-view-id>
        <navigation-case>
            <from-outcome>comprar</from-outcome>
            <to-view-id>/carrinho.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    
</faces-config>
